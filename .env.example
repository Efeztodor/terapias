# Copiar a .env y rellenar valores.
# En Railway: añadir Postgres y definir DATABASE_URL + DB_SSL.

# PostgreSQL (Railway inyecta DATABASE_URL si enlazas el plugin Postgres)
DATABASE_URL="postgresql://usuario:contraseña@localhost:5432/harmonious_health"
# En Railway usar DB_SSL=true (Postgres en la nube suele requerir SSL)
DB_SSL="false"
DB_LOG="false"

# API Server (Railway inyecta PORT automáticamente)
PORT=3001
HOST="0.0.0.0"

# Producción: no hace falta CORS_ORIGIN si front y API van en el mismo dominio
CORS_ORIGIN=""

# Frontend (solo desarrollo; en producción la API y el front van en la misma URL)
VITE_API_URL="http://localhost:3001/api"
